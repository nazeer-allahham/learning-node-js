extends ../layouts/app.pug

block content
    if users && users.length > 0
        each user in users
            ul.users.list-group
                li.user.list-group-item.list-group-item-action
                    .float-right
                        a(href=`remove/${ user.id }`) ❎
                        a(href=`edit/${ user.id }`) 🖍
                    h6 #{ user.name }
                    p #{ user.email } | #{ user.country }
    else 
        div
            span.badge.badge-primary.mx-5 No users existed